# IoT微服务架构环境变量配置示例
# 复制此文件为 .env.microservices 并修改相应配置

# ===========================================
# 数据库配置
# ===========================================

# Auth服务数据库
MYSQL_AUTH_ROOT_PASSWORD=root123456
MYSQL_AUTH_DATABASE=iot_auth
MYSQL_AUTH_USER=iot_auth
MYSQL_AUTH_PASSWORD=auth123456

# Device服务数据库
MYSQL_DEVICE_ROOT_PASSWORD=root123456
MYSQL_DEVICE_DATABASE=iot_device
MYSQL_DEVICE_USER=iot_device
MYSQL_DEVICE_PASSWORD=device123456

# Firmware服务数据库
MYSQL_FIRMWARE_ROOT_PASSWORD=root123456
MYSQL_FIRMWARE_DATABASE=iot_firmware
MYSQL_FIRMWARE_USER=iot_firmware
MYSQL_FIRMWARE_PASSWORD=firmware123456

# ===========================================
# Redis配置
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# JWT配置
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===========================================
# MQTT配置
# ===========================================
MQTT_BROKER_HOST=emqx
MQTT_BROKER_PORT=1883
MQTT_USERNAME=iot_gateway
MQTT_PASSWORD=gateway123456

# ===========================================
# 服务端口配置
# ===========================================

# Auth Service
AUTH_HTTP_PORT=8101
AUTH_GRPC_PORT=50051

# Device Service
DEVICE_HTTP_PORT=8102
DEVICE_GRPC_PORT=50052

# Firmware Service
FIRMWARE_HTTP_PORT=8103
FIRMWARE_GRPC_PORT=50053

# MQTT Gateway
MQTT_GATEWAY_GRPC_PORT=50054

# Kong API Gateway
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001
